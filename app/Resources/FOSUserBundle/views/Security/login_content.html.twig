{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<h2> {{ 'security.login.title'|trans }} </h2>

<form action="{{ path("fos_user_security_check") }}" method="post" class="form-horizontal">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}

    <div class="form-group">
        <label for="username" class="col-xs-12 col-sm-4 col-md-4 col-lg-4">{{ 'security.login.username'|trans }}</label>
        <div class="col-xs-12 col-sm-8 col-md-8 col-lg-8">
            <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" autocomplete="username" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label for="password" class="col-xs-12 col-sm-4 col-md-4 col-lg-4">{{ 'security.login.password'|trans }}</label>
        <div class="col-xs-12 col-sm-8 col-md-8 col-lg-8">
            <input type="password" id="password" name="_password" required="required" autocomplete="current-password" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <div class=" pull-right">
        <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
        <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
        </div>
    </div>
    <div class="form-group">
        <div class=" pull-right">
            <a href="{{ path('fos_user_registration_register') }}" class="btn btn-default">Inscription?</a>
            <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" class="btn btn-primary" />
        </div>
    </div>
</form>
