{% extends 'base.html.twig' %}

{% block body %}
    <h1>{{ 'region.title'|trans }} <a href="{{ path('region_new') }}" class="btn btn-default pullRight">{{ 'buttons.add'|trans }}</a></h1>

    <table class="datatable">
        <thead>
            <tr>
                <th>{{ 'profile.firstname'|trans }}</th>
                <th>{{ 'buttons.action'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for region in regions %}
            <tr>
                <td>{{ region.nom }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('region_edit', { 'id': region.id }) }}"><i class="fa fa-edit" aria-hidden="true"></i>&nbsp;</a>
                        </li>
                        <li>
                            <a href="{{ path('region_delete', { 'id': region.id }) }}"><i class="fa fa-remove" aria-hidden="true">&nbsp;</i></a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
