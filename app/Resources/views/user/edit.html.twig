<form action="{{ path("user_new") }}" method="post" id="editForm" class="form-horizontal">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}   

    <input type="hidden" name="id_user" value="{{ user.id }}" />

    <div class="form-group hidden">
        <label for="roles" class="col-xs-12 col-sm-4 col-md-4 col-lg-4">Type utilisateur</label>
        <div class="col-xs-12 col-sm-8 col-md-8 col-lg-8">
            {{ form_widget(form.roles, {'attr': {'class': 'role_user'}}) }}
        </div>
    </div>

    <div class="form-group">
        <label for="roles" class="col-xs-12 col-sm-4 col-md-4 col-lg-4">Type utilisateur</label>
        <div class="col-xs-12 col-sm-8 col-md-8 col-lg-8">
            <select class="form-control" name="role_user" id="role_user">
                <option value="ROLE_DGPE">DGPE</option>
                <option value="ROLE_SOCIETE">Société</option>
                <option value="ROLE_CANDIDAT">Candidat</option>
                <option value="ROLE_ADMIN">Administrateur</option>
            </select>
        </div>
    </div>

    <div class="form-group">
        <label for="nom" class="col-xs-12 col-sm-4 col-md-4 col-lg-4">Nom</label>
        <div class="col-xs-12 col-sm-8 col-md-8 col-lg-8">
            {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>

    <div class="form-group role_societe">
        <label for="nif" class="col-xs-12 col-sm-4 col-md-4 col-lg-4">NIF</label>
        <div class="col-xs-12 col-sm-8 col-md-8 col-lg-8">
            {{ form_widget(form.nif, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>

    <div class="form-group role_societe">
        <label for="stat" class="col-xs-12 col-sm-4 col-md-4 col-lg-4">STAT</label>
        <div class="col-xs-12 col-sm-8 col-md-8 col-lg-8">
            {{ form_widget(form.stat, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>

    <div class="form-group">
        <label for="adresse" class="col-xs-12 col-sm-4 col-md-4 col-lg-4">Adresse</label>
        <div class="col-xs-12 col-sm-8 col-md-8 col-lg-8">
            {{ form_widget(form.adresse, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>

    <div class="form-group">
        <label for="telephone" class="col-xs-12 col-sm-4 col-md-4 col-lg-4">Téléphone</label>
        <div class="col-xs-12 col-sm-8 col-md-8 col-lg-8">
            {{ form_widget(form.telephone, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>

    <div class="form-group">
        <label for="email" class="col-xs-12 col-sm-4 col-md-4 col-lg-4">Email</label>      
        <div class="col-sm-8">
           {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
    <div class="form-group">
        <label for="username" class="col-xs-12 col-sm-4 col-md-4 col-lg-4">Identifiant</label>       
        <div class="col-sm-8">
           {{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>

    {% for key,passwordField in form.plainPassword %}
        <div class="form-group">
            {% if key == 'first' %}
                <label class="col-xs-12 col-sm-4 col-md-4 col-lg-4"> Mot de passe</label>  
            {% else %}      
                <label class="col-xs-12 col-sm-4 col-md-4 col-lg-4">Confirmation du mot de passe</label>
            {% endif %}
            <div class="col-xs-12 col-sm-8 col-md-8 col-lg-8">
               {{ form_widget(passwordField, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
    {% endfor %}

    {{ form_rest(form)}}

  </form> 