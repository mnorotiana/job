<div class="channel col-xs-12 col-sm-3 col-lg-3 col-md-3" tabindex="0" onclick="activateChannel('{{ channel }}')">
  <div class="panel panel-default">
    <div class="panel-heading">{{ online.nom }}</div>
    <div class="panel-body">
        <div id="history{{ channel }}">
          {% set discussions = messages[channel] %}                  
          {% for discussion in discussions %}
            {% set user_class = 'receiver' %}
            {% if discussion.sender.id == app.user.id %}
              {% set user_class = 'sender' %}
            {% endif %}
            <div class="message {{ user_class }}"><span class="name">{{ discussion.sender.nom }}</span> : <span class="texte">{{ discussion.message }}</span></div>
          {% endfor %}
        </div>
    </div>
    <div class="panel-footer">
        <div class="row">
          <div class="col-xs-8 col-sm-8 col-md-8 col-lg-8">
            <input type="text" id="message-{{ channel }}" class="form-control"/>
            <input type="hidden" id="user-{{ channel }}" value="{{ app.user.nom }}##{{ app.user.id }}" />
          </div>
          <div class="col-xs-4 col-sm-3 col-md-3 col-lg-3">
            <button class="send-btn btn btn-primary" onclick="sendMessage('{{ channel }}')">{{ 'buttons.send'|trans }}</button>
          </div>
        </div>
    </div>
  </div>
</div>